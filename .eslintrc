/* eslint-disable no-plusplus */
{
    "env": {
        "jest": true,
        "browser": true,
        "es6": true,
        "node": true 
    },
    "extends": "airbnb-base", 
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly" 
    },
    "parserOptions": { 
        "ecmaVersion": 2018, 
        "sourceType": "module"
    }, 
    "rules": {
        "no-use-before-define": "off",
        "no-tabs": 0,
        "no-plusplus": "off",
        "no-restricted-syntax": [
            "error", 
            "LabeledStatement", 
            "WithStatement"
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
            ]
     }
   }